

<%= render @event %>

<div>
  <%= link_to "Host Profile", {controller: 'users', action: :show, id: @event.host.id}, user: @event.host%>
  <%= link_to "Edit this event", edit_event_path(@event) %> |
  <%= link_to "Back to events", events_path %> |
  <%= button_to "Join Event", event_joinings_path(event_id: @event.id), method: :post %>

